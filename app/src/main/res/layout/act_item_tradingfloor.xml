<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/ac_list_item_background"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bitebi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="比特币(BTC)"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="¥0.888"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@color/red"
                    android:gravity="center">
                    <TextView
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="+2.50%"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ac_base_fenGeXian"
            />

        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="bottom"
                    android:text="@string/act_mainTab_tradingFloor_chengjiaoe"
                    android:textColor="@color/ac_base_ziti_hui"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:layout_height="0dp"
                    android:text="18888.88万"
                    android:textColor="@color/ac_base_ziti_hui"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="bottom"
                    android:text="@string/act_mainTab_tradingFloor_chengjiaoliang"
                    android:textColor="@color/ac_base_ziti_hui"
                    />
                <TextView
                    android:id="@+id/tv_chengjiaoliang"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:layout_height="0dp"
                    android:text="3990"
                    android:textColor="@color/ac_base_ziti_hui"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="bottom"
                    android:text="@string/act_mainTab_tradingFloor_minprice"
                    android:textColor="@color/ac_base_ziti_hui"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:layout_height="0dp"
                    android:text="¥0.999"
                    android:textColor="@color/ac_base_ziti_hui"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="bottom"
                    android:text="@string/act_mainTab_tradingFloor_maxprice"
                    android:textColor="@color/ac_base_ziti_hui"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:layout_height="0dp"
                    android:text="¥1.020"
                    android:textColor="@color/ac_base_ziti_hui"
                    />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
