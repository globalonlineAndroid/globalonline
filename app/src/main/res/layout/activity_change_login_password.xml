<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    xmlns:myxmlns="http://schemas.android.com/apk/res-auto"
    android:background="@color/ac_user_login"
    android:orientation="vertical"
    tools:context="com.global.globalonline.activities.user.ChangeLoginPasswordActivity">

    <com.global.globalonline.view.TitleView_
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        myxmlns:titletxt="@string/act_user_changeloginpassword_title"
        />
    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <EditText
            android:id="@+id/et_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minLines="6"
            android:maxLength="18"
            android:inputType="textPassword"
            android:hint="@string/act_user_changeloginpassword_oldpwd"
            style="@style/editText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minLines="6"
            android:maxLength="18"
            style="@style/editText"
            android:inputType="textPassword"
            android:hint="@string/act_user_changeloginpassword_newpwd"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <EditText
            android:id="@+id/et_repwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minLines="6"
            android:maxLength="18"
            android:inputType="textPassword"
            style="@style/editText"
            android:hint="@string/act_user_changeloginpassword_repwd"
            />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/act_user_changeloginpassword_tijiao"
            android:textColor="@color/white"
            android:background="@drawable/act_login_loging"
            />
    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:padding="6dp"

        android:text="@string/act_user_changeloginpassword_text"

        />

</LinearLayout>
